<% layout("/layouts/boilerplate") -%>

    <body>

        <div class="row">
            <div class="col-8 offset-2" >

                <h3>Create New List</h3>
                <form method="post" action="/listings" enctype="multipart/form-data" >

                    <div class="mb-3">

                        <label for="title" class="from-lable">Title</label>
                        
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>

                    </div>
                    <div class="mb-3">

                        <label for="description" class="from-lable">Description</label>
                       
                        <textarea class="form-control" name="listing[description]"
                            placeholder="enter description"></textarea required>

                    </div>
                    
                    <div class="mb-3">
                        <label for="image.url" class="from-lable">Upload Image</label>
                        
                        <input class="form-control" name="listing[image][url]" type="file" >
                        required;

                    </div>

                <div class="row m-0">   
                    <div class="mb-3 p-0  col-md-4">

                        <label for="price" class="from-lable">Price</label>
                        
                        <input class="form-control" name="listing[price]" placeholder="enter price" type="number" required>

                    </div>
                    <div class="mb-3 col-md-8">

                        <label for="country" class="from-lable">Country</label>
                        
                        <input class="form-control" name="listing[country]" placeholder="enter country" type="text" required>

                    </div>
                </div> 
                    <div class="mb-3">

                        <label for="location" class="from-lable">Location</label>
                       
                        <input class="form-control" name="listing[location]" placeholder="enter location" type="text" required>

                    </div>

                    
                    <br><br>
                    <button class="btn btn-dark mb-3">Add</button>
                </form>
            </div>
        </div>
       

    </body>